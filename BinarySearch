#include <iostream>
#include <algorithm>

using namespace std;

void recursiveBinarySearch(int a[], int low, int high, int key) {
    if (low < high) {
        int mid = (low + high) / 2;
        if (a[mid] == key) cout << mid << endl;
        else if (a[mid] < key) recursiveBinarySearch(a, mid + 1, high, key);
        else recursiveBinarySearch(a, low, mid - 1, key);
    } else {
        if (a[low] == key) cout << low << endl;
    }
}

void binarySearch(int a[], int length, int key) {
    recursiveBinarySearch(a, 0, length - 1, key);
}

int main() {
    int a[] = {3, 2, 1, 5, 4, 6};
    int length = sizeof a / sizeof a[0];
    std::sort(a, a + length);
    binarySearch(a, length, 6);
    return 0;
}
